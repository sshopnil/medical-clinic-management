<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.doctor.Register">
   <children>
      <Label layoutX="343.0" layoutY="57.0" text="Doctor Registration Form" textFill="#1e3d59">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Label>
      <Text layoutX="208.0" layoutY="149.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Name :" />
      <TextField fx:id="name" layoutX="206.0" layoutY="160.0" prefHeight="26.0" prefWidth="282.0" promptText="Enter name" />
      <Text layoutX="505.0" layoutY="149.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Address :" />
      <TextField fx:id="address" layoutX="502.0" layoutY="160.0" prefHeight="26.0" prefWidth="282.0" promptText="Enter address" />
      <DatePicker fx:id="birthdate" editable="false" layoutX="507.0" layoutY="250.0" />
      <Text layoutX="207.0" layoutY="349.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Phone :" />
      <TextField fx:id="phone" layoutX="208.0" layoutY="359.0" prefHeight="26.0" prefWidth="282.0" promptText="phone" />
      <Text layoutX="208.0" layoutY="220.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Email :" />
      <TextField fx:id="email" layoutX="207.0" layoutY="237.0" prefHeight="26.0" prefWidth="282.0" promptText="Email" />
      <Text layoutX="208.0" layoutY="289.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password :" />
      <TextField fx:id="password" layoutX="208.0" layoutY="301.0" prefHeight="26.0" prefWidth="282.0" promptText="Password" />
      <Button layoutX="513.0" layoutY="438.0" mnemonicParsing="false" onAction="#submitAction" prefHeight="26.0" prefWidth="70.0" style="-fx-background-color: #1e3d59;" text="Submit" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button layoutX="384.0" layoutY="438.0" mnemonicParsing="false" onAction="#backToLogin" style="-fx-background-color: #1e3d59;" text="Back To Login" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Text layoutX="508.0" layoutY="236.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date of birth:" />
      <RadioButton fx:id="male_btn" layoutX="508.0" layoutY="327.0" mnemonicParsing="false" selected="true" text="Male">
         <toggleGroup>
            <ToggleGroup fx:id="gender" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="female_btn" layoutX="598.0" layoutY="327.0" mnemonicParsing="false" text="Female" toggleGroup="$gender" />
      <VBox layoutX="-2.0" prefHeight="500.0" prefWidth="161.0" style="-fx-background-color: #1e3d59;" />
   </children>
</AnchorPane>
